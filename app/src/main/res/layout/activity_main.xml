<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/img_poster" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/titlePadding"
                android:paddingRight="@dimen/titlePadding"
                android:paddingTop="@dimen/titlePadding"
                android:text="@string/title"
                android:textColor="@color/titleMain"
                android:textSize="@dimen/textLarge"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/descrPadding"
                android:text="@string/description"
                android:textColor="@color/textMain"
                android:textSize="@dimen/textMedium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/descrPadding"
                android:paddingLeft="@dimen/descrPadding"
                android:paddingRight="@dimen/descrPadding"
                android:text="@string/description_cont"
                android:textColor="@color/textMain"
                android:textSize="@dimen/textMedium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/descrPadding"
                android:paddingLeft="@dimen/descrPadding"
                android:paddingRight="@dimen/descrPadding"
                android:text="@string/description_fin"
                android:textColor="@color/textMain"
                android:textSize="@dimen/textMedium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/separatorMargin"
                android:background="@color/separator" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="@dimen/drawablePadding"
                android:gravity="left|center_vertical"
                android:onClick="openBrowser"
                android:paddingLeft="@dimen/iconPadding"
                android:tag="@string/address_url"
                android:text="@string/address"
                android:textAllCaps="@string/buttonCaps"
                android:textColor="@color/buttonsText"
                android:textSize="@dimen/textSmall" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/separatorMargin"
                android:layout_marginTop="@dimen/separatorMargin"
                android:background="@color/separator" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableLeft="@drawable/ic_website"
                android:drawablePadding="@dimen/drawablePadding"
                android:gravity="left|center_vertical"
                android:onClick="openBrowser"
                android:paddingLeft="@dimen/iconPadding"
                android:tag="@string/website_url"
                android:text="@string/website_url"
                android:textAllCaps="@string/buttonCaps"
                android:textColor="@color/buttonsText"
                android:textSize="@dimen/textSmall" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/separatorMargin"
                android:layout_marginTop="@dimen/separatorMargin"
                android:background="@color/separator" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="@dimen/drawablePadding"
                android:gravity="left|center_vertical"
                android:onClick="dialPhone"
                android:paddingLeft="@dimen/iconPadding"
                android:text="@string/phone"
                android:textAllCaps="@string/buttonCaps"
                android:textColor="@color/buttonsText"
                android:textSize="@dimen/textSmall" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/separatorMargin"
                android:layout_marginTop="@dimen/separatorMargin"
                android:background="@color/separator" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="@dimen/drawablePadding"
                android:gravity="left|center_vertical"
                android:onClick="writeEmail"
                android:paddingLeft="@dimen/iconPadding"
                android:text="@string/email"
                android:textAllCaps="@string/buttonCaps"
                android:textColor="@color/buttonsText"
                android:textSize="@dimen/textSmall" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/separatorMargin"
                android:layout_marginTop="@dimen/separatorMargin"
                android:background="@color/separator" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>